{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "sonarjs",
    "optimize-regex"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:sonarjs/recommended",
    "plugin:optimize-regex/recommended"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "dist/*"
  ]
}